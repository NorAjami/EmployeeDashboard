<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #121212;
            color: #f0f0f0;
            font-family: 'Segoe UI', sans-serif;
            padding: 2rem;
        }
        .container {
            max-width: 800px;
            margin: auto;
        }
        h1 {
            color: #90caf9;
        }
        input, textarea, button {
            width: 100%;
            padding: 0.7rem;
            margin: 0.5rem 0;
            background-color: #1e1e1e;
            color: white;
            border: 1px solid #333;
            border-radius: 5px;
        }
        button {
            background-color: #90caf9;
            color: #000;
            font-weight: bold;
        }
        .log-entry {
            background-color: #1e1e1e;
            border-left: 4px solid #90caf9;
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
